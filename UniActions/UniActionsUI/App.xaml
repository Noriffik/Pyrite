<Application x:Class="UniActionsUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UniActionsUI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UniActionsUI;component/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/UniActionsUI;component/Styles/ComboBoxStyles.xaml"/>
                <ResourceDictionary Source="/UniActionsUI;component/Styles/LabelStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type TabControl}">
                <EventSetter Event="SelectionChanged" Handler="SelectedTabChanged"></EventSetter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
