<Grid x:Class="UniActionsUI.CItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="30"
             HorizontalAlignment="Stretch"
             Margin="5"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="grid" Cursor="Hand" Focusable="True">
        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Triggers>
                    <Trigger Property="IsFocused" Value="true">
                        <Setter Property="Background" Value="Tomato" />                        
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="true">
                        <Setter Property="Background" Value="Tomato" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        <Label VerticalAlignment="Top" HorizontalAlignment="Left" Name="lblNum" Foreground="Black" Opacity="0.4"></Label>
        <Label Name="lblContent" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"></Label>           
    </Grid>
</Grid>
