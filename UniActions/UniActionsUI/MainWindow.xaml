<Window x:Class="UniActionsUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UniActionsUI"
        WindowState="Maximized"
        Title="UniActions" Height="400" Width="700">
    <Grid>
        <TabControl>
            <TabItem Name="tabTasks" Header="Сценарии">
                <local:CRunScenariosItems></local:CRunScenariosItems>
            </TabItem>
            <TabItem Name="tabTasksSettings" Header="Настройки сценариев">
                <local:ScenariosView></local:ScenariosView>
            </TabItem>
            <TabItem Name="tabSettings" Header="Настройки">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="60"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TabControl>
                        <TabItem Header="Модули проверки">
                            <local:CCheckerModules></local:CCheckerModules>
                        </TabItem>
                        <TabItem Header="Модули действия">
                            <local:CActionModules></local:CActionModules>
                        </TabItem>
                        <TabItem Header="IP фильтр">
                            <local:CIpList></local:CIpList>
                        </TabItem>
                        <TabItem Header="Порты">
                            <local:CPorts></local:CPorts>
                        </TabItem>
                        <TabItem Header="Настройки">
                            <local:CSettings></local:CSettings>
                        </TabItem>
                    </TabControl>
                    <Grid Grid.Row="1">
                        <local:CSavior x:Name="cSavior"></local:CSavior>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
